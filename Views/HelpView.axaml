<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mochi.ViewModels"
             mc:Ignorable="d" d:DesignWidth="405" d:DesignHeight="620"
             x:Class="Mochi.Views.HelpView"
             x:DataType="vm:HelpViewModel">

    <Design.DataContext>
        <vm:HelpViewModel />
    </Design.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="16" Margin="20,24,20,80">

            <TextBlock Text="Help &amp; Guide"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <!-- What is Mochi? -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="What is Mochi?" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Mochi is a virtual pet application where you care for your very own golden retriever puppy! Feed, play with, clean, and put your pet to sleep to keep them happy and healthy. Your pet's stats change over time, even while the app is closed, so check in regularly to make sure your furry friend is doing well!" />
                </StackPanel>
            </Border>

            <!-- Pet Stats -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Pet Stats" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Your pet has three core stats, each ranging from 0 to 100:" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Hunger (0 = full, 100 = starving): Rises over time. Feed your pet to bring it down." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Energy (0 = exhausted, 100 = fully rested): Drops over time. Put your pet to sleep to recover." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Happiness (0 = miserable, 100 = ecstatic): Drops slowly. Play with and clean your pet to boost it." />
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Stats decay automatically every 3 minutes while the app is open. They also decay while the app is closed (capped at 24 hours of away-time). When you return, your pet's stats will reflect the time you were gone, and you'll receive a welcome-back coin bonus." />
                </StackPanel>
            </Border>

            <!-- Mood -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Mood" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Your pet's mood is calculated from its overall wellness: an average of Energy, Happiness, and fullness (inverse of Hunger). The mood levels are:" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Ecstatic: Wellness 80+. Your pet is thriving!" />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Happy: Wellness 60-79. Things are going well." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Content: Wellness 40-59. Decent, but could be better." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Sad: Wellness 20-39. Give your pet some attention! :(" />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Miserable: Wellness below 20 D:" />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Sleeping: Shown whenever your pet is asleep." />
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Keep an eye on the mood indicator and speech bubble on the Home tab, cause they'll tell you how your pet feels." />
                </StackPanel>
            </Border>

            <!-- Care Actions -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Care Actions" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="On the Care tab, you can perform four actions to look after your pet. Each action has a cooldown before you can use it again:" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Feed (15s cooldown): Reduces hunger by 25, slightly boosts energy and happiness. Earns 5 coins." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Play (30s cooldown): Big happiness boost (+20), but costs some energy and slightly increases hunger. Earns 8 coins." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Sleep (60s cooldown): Puts your pet to sleep. While asleep, energy recovers rapidly and hunger rises slowly. Tap again to wake up. Earns 3 coins." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Clean (15s cooldown): Nice happiness boost (+15), costs a little energy. Earns 5 coins." />
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Note: You cannot feed, play with, or clean your pet while it is asleep. Only the Sleep button works (as a Wake Up toggle). Your pet will also wake up automatically once its energy is fully restored." />
                </StackPanel>
            </Border>

            <!-- Difficulty -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Difficulty Levels" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="The difficulty you chose at setup affects two things:" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Easy: Care actions are 30% more effective, stats decay 30% slower. Great for a relaxed experience." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Normal: Standard balance. Actions and decay work at their base values." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Hard: Care actions are 30% less effective, stats decay 30% faster. A real challenge!" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Personality -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Personalities" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Each personality gives your pet unique traits that affect stat decay rates and how they respond to care:" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Chill: Happiness decays 15% slower. Gets a bonus energy boost from sleeping." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Energetic: Hunger and energy decay 20% faster. Gets extra happiness from playing (but uses more energy too)." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Anxious: Happiness decays 25% faster. Gets bonus happiness from cleaning and bonus energy from sleeping." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Independent: All stats decay 15% slower. Slightly less hungry after feeding, but gets a bit less joy from playing." />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Economy Section -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Economy &amp; Coins" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Mochi has a simple coin economy that rewards you for taking good care of your pet." />
                    <TextBlock Text="Earning Coins" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Care Actions: Every care action earns coins: Feed (+5), Play (+8), Sleep (+3), Clean (+5)." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Return Bonus: When you come back after being away, you earn 1 coin for every 5 minutes you were gone, up to a maximum of 50 coins. This rewards checking in regularly!" />
                    </StackPanel>
                    <TextBlock Text="Spending Coins" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Visit the Shop tab to spend your coins on items for your pet. Each itapplies a temporary buff that slows down stat decay, helping your pet stay happy and healthy with less effort. See the &quot;Buffs&quot; section below for details." />
                    <TextBlock Text="Tracking Finances" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="The Report tab shows a complete breakdown of your earnings, spending, and spending by category. Every purchase and care reward is recorded as a transaction so you can see exactly where your coins went." />
                </StackPanel>
            </Border>

            <!-- Buffs Section -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Shop Items &amp; Buffs" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Items purchased from the Shop apply temporary buffs that reduce how fast certain stats decay. Buffs last for a set number of days and stack with each other. Buying multiple items at once gives you the combined benefit of all active buffs." />
                    <TextBlock Text="Available Items" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Premium Food (10 coins, 2 days): Hunger decays 50% slower. Great if you can't check in as often." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Toy (15 coins, 2 days): Happiness decays 50% slower. Keeps your pet cheerful longer." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Comfy Bed (25 coins, 3 days): Energy decays 50% slower. Your pet stays energized." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Medicine (20 coins, 1 day): All stats decay 30% slower. A short but powerful all-around boost." />
                    </StackPanel>
                    <TextBlock Text="How Buffs Work" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Each buff has a decay multiplier for Hunger, Energy, and Happiness. A multiplier of 0.5 means that stat decays at half its normal rate. When multiple buffs are active, their multipliers are multiplied together. For example, Premium Food (0.5× hunger) combined with Medicine (0.7× hunger) results in 0.35× hunger decay, making it very slow." />
                    <TextBlock Text="Refreshing Buffs" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="If you buy an item you already have an active buff for, the duration is refreshed (reset to its full length from now) rather than stacking a second copy. This means you can &quot;top off&quot; an expiring buff without waste." />
                    <TextBlock Text="Expiration" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Buffs expire automatically after their duration runs out. Expired buffs are removed at the start of every decay tick, so you'll notice the change gradually. Plan your purchases to keep important buffs active!" />
                </StackPanel>
            </Border>

            <!-- Navigation -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Navigating the App" FontWeight="SemiBold" FontSize="16" />
                    <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                               Text="Use the bottom navigation bar to switch between tabs:" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Home: See your pet, their current mood, and a speech bubble showing how they feel." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Care: Perform care actions (Feed, Play, Sleep, Clean) to improve your pet's stats." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Shop: Spend coins on items that grant temporary stat-decay buffs." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Report: View your pet's profile, financial summary, spending breakdown, and full history log." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Help: You are here :) A complete guide to playing Mochi." />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Tips -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="12" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Tips &amp; Tricks" FontWeight="SemiBold" FontSize="16" />
                    <StackPanel Spacing="4" Margin="8,0,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Check in regularly! Your pet's stats decay while you're away (up to 24 hours), and you earn a return bonus when you come back." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Balance your actions! Playing is the best way to earn coins, but it costs energy. Feed and rest your pet so they have stamina for play." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Use buffs strategically! If you know you'll be away for a while, buy Premium Food or Medicine before closing the app." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Watch the mood! If your pet drops to Sad or Miserable, prioritize feeding and sleeping to stabilize them." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  Stack buffs! Multiple active buffs multiply together for even slower decay. Combining Premium Food + Comfy Bed + Toy covers all three stats." />
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Text="&#x2022;  However, beware that you can't stack the same buff multiple times! It'll just refresh the buff duration!" />
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>